      <!-- Filtro de limpieza realizada (sin texto) -->
      <div class="limpieza-filtro">
        <select id="limpieza" onchange="filtrarPorLimpieza()">
          <option value="">Todos</option>
          <option value="sí">Sí</option>
          <option value="no">No</option>
        </select>
      </div>
